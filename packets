
function getGenericAck() return "%d " .. consts.getAck() end

function getTurtleStatePoll() return "%d " .. consts.getState() .. " REQUEST" end

function getTurtleFreeStateResponse() return "%d " .. consts.getState() .. " " .. consts.getFreeConst() end
function getTurtleBusyStateResponse() return "%d " .. consts.getState() .. " " .. consts.getBusyConst() end

function getScanRequest() return "%d " .. consts.getScan() .. " %d" end -- first value is the base level

function getItemRequest() return "%d " .. consts.getItem() .. " %d %d" end -- first value is the item, second value is the amount

function getTurtleOnline() return "TURTLE ONLINE" end
function getTurtleOnlineAck() return "TURTLE ONLINE ACK" end
function getTurtleOffline() return "TURTLE OFFLINE" end